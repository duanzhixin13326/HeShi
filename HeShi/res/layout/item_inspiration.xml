<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/write"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_gray"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/inspiration_image"
            android:layout_width="280dip"
            android:layout_height="280dip"
            android:src="@drawable/empty_photo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dip" >

            <ImageView
                android:id="@+id/inspiration_msg_image"
                android:layout_width="40dip"
                android:layout_height="45dip"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_commment" />

            <TextView
                android:id="@+id/inspiration_msg_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/inspiration_msg_image"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/inspiration_love_image"
                android:layout_width="40dip"
                android:layout_height="45dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/inspiration_msg_num"
                android:src="@drawable/icon_commment" />

            <TextView
                android:id="@+id/inspiration_love_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/inspiration_love_image"
                android:text="24"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/inspiration_total_image"
                android:layout_width="40dip"
                android:layout_height="45dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_commment" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/inspiration_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最多放四十个字"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/inspiration_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标签"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>